<h1>Mini T√°rsasj√°t√©k</h1>

<div id="dice">üé≤</div>
<div id="board"></div>
<div id="card"></div>

<script>
    const boardSize = 10;
    const board = document.getElementById('board');
    const cardDiv = document.getElementById('card');
    const dice = document.getElementById('dice');

    const cards = [
        "L√©pj el≈ëre 2 mez≈ët!",
        "Menj vissza 1 mez≈ët!",
        "Kimaradsz egy k√∂rb≈ël!",
        "Dobd √∫jra a kock√°t!"
    ];

    let playerPos = 0;
    let skipTurn = false;

    // T√°bla l√©trehoz√°s
    let cells = [];
    for (let i = 0; i < boardSize; i++) {
        let cell = document.createElement('div');
        cell.className = 'cell';
        board.appendChild(cell);
        cells.push(cell);
    }

    // J√°t√©kos hozz√°ad√°sa
    let player = document.createElement('div');
    player.className = 'player';
    cells[0].appendChild(player);

    // Dob√≥kocka kattint√°s
    dice.addEventListener('click', () => {
        if (skipTurn) {
            cardDiv.textContent = "K√∂r kimarad! Most √∫jra j√°tszhatsz.";
            skipTurn = false;
            return;
        }

        let roll = Math.floor(Math.random() * 6) + 1;
        dice.textContent = roll;

        playerPos += roll;
        if (playerPos >= boardSize) playerPos = boardSize - 1;

        cells.forEach(c => { if (c.contains(player)) c.removeChild(player); });
        cells[playerPos].appendChild(player);

        // K√°rtyah√∫z√°s
        if (playerPos % 3 === 0 && playerPos !== 0) {
            let card = cards[Math.floor(Math.random() * cards.length)];
            cardDiv.textContent = card;

            if (card.includes("el≈ëre")) {
                playerPos = Math.min(playerPos + 2, boardSize - 1);
            } else if (card.includes("vissza")) {
                playerPos = Math.max(playerPos - 1, 0);
            } else if (card.includes("Kimaradsz")) {
                skipTurn = true;
            } else if (card.includes("√∫jra")) {
                let reroll = Math.floor(Math.random() * 6) + 1;
                playerPos = Math.min(playerPos + reroll, boardSize - 1);
            }

            cells.forEach(c => { if (c.contains(player)) c.removeChild(player); });
            cells[playerPos].appendChild(player);
        } else {
            cardDiv.textContent = "";
        }
    });
</script>

